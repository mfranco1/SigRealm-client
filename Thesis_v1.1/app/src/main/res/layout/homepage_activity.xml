<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wsg.thesis_v10.HomePage"
    android:background="@drawable/ls_background3">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Leader Boards"
                            android:id="@+id/leader_boards_button"
                            android:background="#cf5fc1ef"
                            android:layout_marginTop="24dp" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Achievements"
                            android:id="@+id/achievements_button"
                            android:background="#cfff6600"
                            android:layout_marginTop="14dp" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile (WIP)"
                            android:id="@+id/profile_button"
                            android:background="#cf5fc1ef"
                            android:layout_marginTop="14dp" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Story (WIP)"
                            android:id="@+id/story_button"
                            android:layout_marginTop="14dp"
                            android:background="#cfff6600" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="About (WIP)"
                            android:id="@+id/about_button"
                            android:layout_marginTop="14dp"
                            android:background="#cf5fc1ef" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="12dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempSS"
                            android:background="#cfff6600"
                            android:textColor="#ff000000"
                            android:text="Signal Strength (Dbm):"
                            android:layout_marginTop="24dp"
                            android:phoneNumber="true"
                            android:layout_marginLeft="18dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempGPS"
                            android:background="#cf5fc1ef"
                            android:textColor="#ff000000"
                            android:text="Coordinates (Lat/Long):"
                            android:layout_marginTop="14dp"
                            android:phoneNumber="true"
                            android:layout_marginLeft="18dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempDT"
                            android:background="#cfff6600"
                            android:textColor="#ff000000"
                            android:text="YYYY/MM/DD/hh/mm:"
                            android:layout_marginTop="14dp"
                            android:phoneNumber="false"
                            android:layout_marginLeft="18dp"
                            android:password="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempNetProvider"
                            android:background="#cf5fc1ef"
                            android:textColor="#ff000000"
                            android:text="Network Provider: "
                            android:layout_marginTop="14dp"
                            android:phoneNumber="false"
                            android:layout_marginLeft="18dp"
                            android:password="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempPts"
                            android:background="#cfff6600"
                            android:textColor="#ff000000"
                            android:text="Points: 0"
                            android:layout_marginTop="14dp"
                            android:phoneNumber="false"
                            android:layout_marginLeft="18dp"
                            android:password="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Signal Report Status: "
                            android:id="@+id/tempStatus"
                            android:background="#cf5fc1ef"
                            android:textColor="#ff000000"
                            android:layout_marginTop="14dp"
                            android:phoneNumber="false"
                            android:layout_marginLeft="18dp"
                            android:password="false"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="78dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SEND SIGNAL"
                        android:id="@+id/signal_report_button"
                        android:background="#cfff6600" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="LOGOUT"
                        android:id="@+id/logout_button"
                        android:background="#cf5fc1ef"
                        android:layout_marginTop="14dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
